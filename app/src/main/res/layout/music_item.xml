<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/music_item"
    android:background="#2e2e2e">

    <ImageView
        android:id="@+id/albumImageItem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/play_button" />


    <TextView
        android:id="@+id/albumNameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:text="Eminemin hansisa Albumu"
        android:textColor="#fff"
        app:layout_constraintStart_toEndOf="@+id/albumImageItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/musicNameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Mahninin adi"
        android:textColor="#c5c5c5"
        app:layout_constraintStart_toEndOf="@+id/albumImageItem"
        app:layout_constraintTop_toBottomOf="@+id/albumNameItem" />


</androidx.constraintlayout.widget.ConstraintLayout>